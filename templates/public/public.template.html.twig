{% extends 'base.html.twig' %}
{% block title %}Newsweb{% endblock %}
{% block body %}
    {% block menu %}
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_public') }}">Newsweb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" aria-current="page" href="{{ path('app_public') }}">Accueil</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_public_blog') }}">blog</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">contact</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Section</a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                {% for item in sections %}
                                    <li><a class="dropdown-item" href="{{ path('app_public_section',{'slug':item.getThesectionslug}) }}">{{ item.getThesectiontitle }}</a></li>
                                {% else %}
                                <li><a class="dropdown-item" href="#">Pas encore de section</a></li>
                                {% endfor %}

                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">Connexion</a></li>
                    </ul>
                </div>
            </div>
        </nav>


    {% endblock %}
    {# Page content #}
    {% block content %}{% endblock %}
{% endblock %}